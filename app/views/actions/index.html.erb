<div class="row">
<h1>Actions</h1> <hr>
  <div class="column">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Name </th>
          <th>Description</th>
          <th>Points</th>
        </tr>
      </thead>
      <tbody>
        <% @actions.each do |action| %>
            <tr data-link="<%= action_path(action) %>">
                <td> <%= action.name %></td>
                <td> <%= action.description %></td>
                <td> <%= action.bliss_pts %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
