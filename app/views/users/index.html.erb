<div class="row">
<h1>Users</h1> <hr>
  <div class="column">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Admin </th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Gender</th>
          <th>Age</th>
          <th>Weight</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
            <tr data-link="<%= user_path(user) %>">
                <td>
                  <% if user.admin %>
                    Yes
                  <% else %>
                    No
                  <% end %>
                </td>
                <td> <%= user.first_name %></td>
                <td> <%= user.last_name %></td>
                <td> <%= user.gender %></td>
                <td> <%= user.age %></td>
                <td> <%= user.weight %></td>
                <td> <%= user.email %> </td>
            </tr>
        <% end %>
      </tbody>
    </table>
<h4>Click on row to view/edit user.</h4>
  </div>
</div>
